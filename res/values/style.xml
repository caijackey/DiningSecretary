        <item name="android:windowExitAnimation">@anim/frame_anim_to_bottom</item>
    </style>

    <style name="Shadow_Black_Up">

        <!-- 阴影样式，黑色向上投影 -->
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDy">-1</item>
    </style>

    <style name="Shadow_Black_Down">

        <!-- 阴影样式，黑色向下投影 -->
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Shadow_White_Down">

