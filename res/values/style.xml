    </style>

    <!-- 自定义Dialog的默认样式 -->
    <style name="Custom_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否模糊 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 主框架功能菜单Dialog的样式 -->
    <style name="Main_Menu_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否模糊 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowAnimationStyle">@style/Animations.PopUpMenu.show1</item>
    </style>

    <style name="animation_drop_down" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/frame_anim_from_up</item>
        <item name="android:windowExitAnimation">@anim/frame_anim_to_up</item>
    </style>

    <style name="Animation_Bottom" mce_bogus="1" parent="android:Animation">
