<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/time_switcher_mian_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/time_switcher_X_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/discount_x" />

        <LinearLayout
            android:id="@+id/time_switcher_center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/time_switcher_X_btn"
            android:orientation="horizontal" >

            <TextSwitcher
                android:id="@+id/time_switcher_hour_NO_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
               android:background="@drawable/timeswitch"
                android:visibility="invisible"
                 android:padding="1dp"
                />
           
            <TextSwitcher
                android:id="@+id/time_switcher_hour_NO1"
                android:layout_width="12dp"
                android:layout_height="wrap_content" 
                android:layout_marginLeft="2dp"
                 android:padding="1dp"
                 android:background="@drawable/timeswitch"
                />
          

            <TextSwitcher
                android:id="@+id/time_switcher_hour_NO2"
                android:layout_width="12dp"
                android:padding="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/timeswitch"
                android:layout_marginLeft="2dp" />
          

            <TextView
                android:id="@+id/time_switcher_hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textColor="@color/text_color_black"
                android:textSize="15dp" />

            <TextSwitcher
                android:id="@+id/time_switcher_minute_NO1"
                android:layout_width="12dp"
                 android:padding="1dp"
                android:layout_height="wrap_content"
                 android:background="@drawable/timeswitch"
                android:layout_marginLeft="2dp" />
            

            <TextSwitcher
                android:id="@+id/time_switcher_minute_NO2"
                android:layout_width="12dp"
                 android:padding="1dp"
                android:layout_height="wrap_content"
                 android:background="@drawable/timeswitch"
                android:layout_marginLeft="2dp" >
            </TextSwitcher>

            <TextView
                android:id="@+id/time_switcher_minute_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textColor="@color/text_color_black"
                android:textSize="15dp" />

            <TextSwitcher
                android:id="@+id/time_switcher_second_NO1"
                android:layout_width="12dp"
                 android:padding="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/timeswitch"
                android:layout_marginLeft="2dp" >
            </TextSwitcher>

            <TextSwitcher
                android:id="@+id/time_switcher_second_NO2"
                android:layout_width="12dp"
                 android:padding="1dp"
                android:layout_height="wrap_content"
                 android:background="@drawable/timeswitch"
                android:layout_marginLeft="2dp" >
            </TextSwitcher>

            <TextView
                android:id="@+id/time_switcher_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textColor="@color/text_color_black"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/time_switcher_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/time_switcher_center_layout"
            android:singleLine="true"
            android:text="1折餐厅疯抢"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>