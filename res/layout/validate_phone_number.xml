<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/user_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginTop="10dip"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|left"
            android:hint="输入手机号"
            android:inputType="phone"
            android:paddingLeft="5dip"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_hint"
            android:textSize="16dip" />

        <RelativeLayout
            android:id="@+id/get_validate_number"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/bg_red_new" >

            <TextView
                android:id="@+id/count_dowm_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="获取验证码"
                android:textColor="@color/background_color_white"
                android:textSize="16dip" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/validate_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/input_validate_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical|left"
                android:hint="输入验证码"
                android:inputType="number"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/text_color_hint"
                android:textSize="16dip" />

            <Button
                android:id="@+id/submit_bnt"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/bg_red_new"
                android:text="确定"
                android:textColor="@color/background_color_white"
                android:textSize="16dip" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>