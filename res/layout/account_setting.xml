<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/block_button"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/user_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@drawable/button_light_color_effect"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="昵称"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitEnd"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:text="芋头小豆"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="14dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="@color/background_color_gray" />

            <RelativeLayout
                android:id="@+id/figure_gender_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_light_color_effect"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="性别"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dip" />

                <Button
                    android:id="@+id/figure_gender"
                    android:layout_width="130dip"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/button_sex_selector"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dip" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/block_button"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@drawable/button_light_color_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitEnd"
                    android:src="@drawable/phones" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/phone_number_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dip"
                    android:text="更换"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
               android:layout_height="1px"
               android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="@color/background_color_gray" />

            <RelativeLayout
                android:id="@+id/sina_blog_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@drawable/button_light_color_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitEnd"
                    android:src="@drawable/sina_blog" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/sina_blog_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dip"
                    android:text="更换"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/sina_blog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="新浪微博"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="@color/background_color_gray" />

            <RelativeLayout
                android:id="@+id/tencent_blog_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@drawable/button_light_color_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitEnd"
                    android:src="@drawable/tencent_blog" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/tencent_blog_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dip"
                    android:text="更换"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/tencent_blog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="腾讯微博"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dip" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>