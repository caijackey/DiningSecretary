<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/res_two_tag_bt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- 标签view -->

    <LinearLayout
        android:id="@+id/res_one_tag1_bt"
        android:layout_width="wrap_content"
        android:layout_height="36dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:background="@drawable/rest_lb_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/res_one_tag1_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14dip" 
            android:layout_weight="2.1"/>

        <TextView
            android:id="@+id/res_one_tag1_num"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14dip" 
            android:layout_weight="1"
            android:layout_marginRight="3dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/res_one_tag2_bt"
        android:layout_width="wrap_content"
        android:layout_height="36dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:background="@drawable/rest_lb_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/res_one_tag2_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14dip" 
            android:layout_weight="2.1"/>

        <TextView
            android:id="@+id/res_one_tag2_num"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14dip" 
            android:layout_weight="1"
            android:layout_marginRight="3dip"/>
    </LinearLayout>

</LinearLayout>