<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    >

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="100dip"
      android:layout_alignParentBottom="true"
      android:background="@drawable/group_buy_tag_bg"
      android:paddingBottom="0dip" >

      <TextView
          android:id="@+id/group_buying_title"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dip"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="40dip"
          android:layout_marginTop="10dip"
          android:text=""
          android:singleLine="true"
          android:textColor="@color/text_color_white"
          android:textSize="18dip" />

      <Button
          android:id="@+id/group_buying_close"
          android:layout_width="25dip"
          android:layout_height="25dip"
          android:layout_alignParentRight="true"
          android:layout_marginTop="10dip"
          android:layout_marginRight="10dip"
          android:background="@drawable/group_buy_close" />

      <View
          android:layout_width="fill_parent"
          android:layout_height="1px"
          android:layout_below="@+id/group_buying_title"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="40dip"
          android:background="@color/background_color_deep_gray" />

      <Button
          android:id="@+id/group_buying_bt"
          android:layout_width="90dip"
          android:layout_height="35dip"
          android:layout_below="@+id/group_buying_title"
          android:layout_marginLeft="10dip"
          android:layout_marginTop="10dip"
          android:background="@drawable/bg_red_new"
          android:textColor="@color/text_color_white"
          android:textSize="16dip" />

      <LinearLayout
          android:id="@+id/group_buying_detail_layout"
          android:layout_width="fill_parent"
          android:layout_height="40dip"
          android:layout_below="@+id/group_buying_title"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip"
          android:layout_marginTop="10dip"
          android:layout_toRightOf="@+id/group_buying_bt"
          android:orientation="vertical" >

          <TextView
              android:id="@+id/group_buying_time_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:singleLine="true"
              android:textColor="@color/text_color_gray"
              android:textSize="16dip" 
              />

          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal" >

              <TextView
                  android:id="@+id/group_buying_detail"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text=""
                  android:textColor="@color/text_color_gray"
                  android:singleLine="true"
                  android:textSize="16dip" 
                  android:gravity="center_vertical"
                  />
          </LinearLayout>
      </LinearLayout>
  </RelativeLayout>

</RelativeLayout>