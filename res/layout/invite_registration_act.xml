<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/new_block_button"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_light_color_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:text="手机号"
                android:textColor="@color/text_color_black"
                android:textSize="16dip" />

            <EditText
                android:id="@+id/invite_registration_phone"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/edittext_backgroud"
                android:maxLength="11"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:hint="请输入手机号"
                android:textSize="16dip"
                android:textColor="@color/text_color_black" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/background_color_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_light_color_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:text="邀请码"
                android:textColor="@color/text_color_black"
                android:textSize="16dip" />

            <EditText
                android:id="@+id/invitation_code"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/edittext_backgroud"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textSize="16dip"
                android:hint="请输入邀请码"
                android:textColor="@color/text_color_black" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/background_color_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_light_color_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:text="验证码"
                android:textColor="@color/text_color_black"
                android:textSize="16dip" />

            <EditText
                android:id="@+id/registration_code"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:layout_weight="0.50"
                android:background="@drawable/edittext_backgroud"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textSize="16dip"
                android:hint="请输入验证码"
                android:textColor="@color/text_color_black" >
            </EditText>

            <RelativeLayout
                android:id="@+id/get_registration_code"
                android:layout_width="140dip"
                android:layout_height="35dip"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:background="@drawable/new_green_bg"
                android:textColor="@color/text_color_white"
                android:textSize="14dip" >

                <TextView
                    android:id="@+id/count_dowm_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="获取验证码"
                    android:textColor="@color/text_color_white"
                    android:textSize="16dip" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit_bnt"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/bg_red_new"
        android:text="确定"
        android:textColor="@color/background_color_white"
        android:textSize="16dip" />

</LinearLayout>