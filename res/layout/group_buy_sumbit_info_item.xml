<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/group_buy_sumbit_name"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:gravity="left|center"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="16dip" />

        <EditText
            android:id="@+id/group_buy_sumbit_detail_ed"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/edittext_backgroud"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_hint"
            android:textSize="16dip" />
    </LinearLayout>

    <View
        android:id="@+id/group_buy_sumbit_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="10dip"
        android:background="@color/background_color_gray" />

</LinearLayout>