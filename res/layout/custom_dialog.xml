<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="20dp"
	android:layout_margin="20dp"
	android:background="@drawable/bg_custom_dialog">
	<TextView
		android:id="@+id/custom_dialog_tvMsg"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/text_color_white"
		android:textSize="16dp"
		android:layout_margin="10dp" />
	<Button
		android:id="@+id/custom_dialog_btnButton1"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_marginTop="5dp"
		android:textSize="20dp"
		android:textColor="@color/text_color_white"
		android:background="@drawable/custom_dialog_button1" />
	<Button
		android:id="@+id/custom_dialog_btnButton2"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_marginTop="5dp"
		android:textSize="20dp"
		android:textColor="@color/text_color_white"
		android:background="@drawable/custom_dialog_button1" />
	<Button
		android:id="@+id/custom_dialog_btnButton3"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_marginTop="10dp"
		android:textSize="20dp"
		android:textColor="@color/text_color_black"
		android:background="@drawable/custom_dialog_button2" />
</LinearLayout>