<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="5dp">
	<ImageView
		android:id="@+id/frame_download_notification_ivIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:src="@drawable/icon" />
	<TextView
		android:id="@+id/frame_download_notification_tvTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_toRightOf="@+id/frame_download_notification_ivIcon"
		android:singleLine="true"
		android:ellipsize="end"
		android:textSize="16dp"
		android:text="正在下载" />
	<TextView
		android:id="@+id/frame_download_notification_tvContent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_below="@+id/frame_download_notification_tvTitle"
		android:layout_alignLeft="@+id/frame_download_notification_tvTitle"
		android:singleLine="true"
		android:ellipsize="end"
		android:textSize="14dp"
		android:text="18%" />
	<ProgressBar
		android:id="@+id/frame_download_notification_pbDownload"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/frame_download_notification_tvContent"
		android:layout_alignTop="@+id/frame_download_notification_tvContent"
		style="?android:attr/progressBarStyleHorizontal" />
</RelativeLayout>