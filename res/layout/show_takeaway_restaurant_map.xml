<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 搜索条件 -->

    <LinearLayout
        android:id="@+id/top_condition_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginBottom="-2dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dip" >

        <Button
            android:id="@+id/button_first"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/list_toggle_button"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/button_second"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/list_toggle_button"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textSize="14dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/list_toggle_button_no_arrow"
            android:clickable="false"
            android:drawablePadding="-20dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_black"
            android:textSize="14dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center"
            android:background="@drawable/shape_bg_black_border" >

            <com.baidu.mapapi.map.MapView
                android:id="@+id/show_takeaway_res_map"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:enabled="true" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/show_takeaway_locBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_locate_me"
            android:scaleType="center" />
    </FrameLayout>

</LinearLayout>